@model IEnumerable<MyASPApp.Models.Trainer>
@{
    ViewData["Title"] = "Get All Trainer";
}

<div class="row">
    @Html.Raw(ViewData["pesan"])
    <a asp-action="Add">Tambah Data Trainer</a><br/>
    <div class="col-md-8">
        <h2>Daftar Trainer</h2>
        <table class="table striped">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Expertise</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
            </tr>
            @foreach (var item in @Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Expertise</td>
                    <td><a asp-action="Update" asp-route-id="@item.Id" class="btn btn-sm btn-success">update</a></td>
                    <td><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">delete</a></td>
                </tr>
            }
        </table>
       
        
    </div>
</div>